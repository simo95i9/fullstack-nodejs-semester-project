{
    "name": "personal-wiki",
    "version": "1.0.0",
    "type": "module",
    "dependencies": {
        "npm-run-all": "^4.1.5",
        "express": "^4.18.1",
        "ejs": "^3.1.8",
        "@js-temporal/polyfill": "^0.4.2"
    },
    "devDependencies": {
        "nodemon": "^2.0.20"
    },
    "scripts": {
        "start": "npm run prod",
        "prod": "npm-run-all --sequential build:**",
        "dev": "npm-run-all --parallel watch:**",
        "build:server": "node app.js",
        "watch:server": "nodemon app.js"
    },
    "nodemonConfig": {
        "ignore": ["public"],
        "ext": "js, mjs, json, html"
    }
}
